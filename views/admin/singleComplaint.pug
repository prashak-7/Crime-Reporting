extends base
block content 

  section.section__inner
    .complaint__info 
      div 
        p Full Name 
        p= complaint.fullName 
      div
        p Contact Number
        p= complaint.contactNumber 
      div 
        p Reported Date 
        p= complaint.complainedDate.toLocaleDateString("en-us") 
      div 
        p Crime Date 
        p=complaint.crimeDate.toLocaleDateString("en-us") 
      div 
        p Province 
        p= complaint.province
      div   
        p Crime Location 
        p=complaint.crimeLocation 
      div 
        p Police Station 
        p= complaint.policeStation 
      div   
        p Crime Type 
        p= complaint.crimeType
      div 
        p Crime Description 
        p= complaint.crimeDescription

      div 
        p Status
        form.form--updateComplaint
          select.select-status#status
            option(value="Pending", selected=complaint.status === 'Pending') Pending 
            option(value="Under Investigation", selected=complaint.status === 'Under Investigation') Under Investigation
            option(value="Resolved", selected=complaint.status === 'Resolved') Resolved
            option(value="Closed", selected=complaint.status === 'Closed') Closed
          .btn__group
            input(type="submit" value="Update")
            input(type="submit" value="Delete") 